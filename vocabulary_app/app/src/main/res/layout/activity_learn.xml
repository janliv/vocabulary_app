<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A272D">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_corner_bottom_bar"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="#2A3C44"
        app:itemTextColor="@color/icons_color"
        app:menu="@menu/navigation_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="257dp"
        app:srcCompat="@drawable/ic_vocabulary_area" />


    <TextView
        android:id="@+id/word"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="630dp"
        android:textColor="#3DD598"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phonetic"
        android:layout_width="147dp"
        android:layout_height="67dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="557dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/wordtype"
        android:layout_width="147dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="557dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/definition"
        android:layout_width="302dp"
        android:layout_height="219dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="305dp"
        android:textAlignment="gravity"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/next_word"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="180dp"
        android:background="@drawable/next_word_button_custom" />

    <ImageButton
        android:id="@+id/review_words"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="180dp"
        android:background="@drawable/review_words_button" />

    <ImageButton
        android:id="@+id/learn_this_word"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/learn_this_word_button_custom" />

    <ImageButton
        android:id="@+id/voice"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="286dp"
        android:background="@drawable/voice_button_custom" />


</RelativeLayout>