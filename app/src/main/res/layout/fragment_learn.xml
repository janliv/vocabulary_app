<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A272D">

    <RelativeLayout
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/learn_this_word"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/ic_vocabulary_area">


        <TextView
            android:id="@+id/word"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:layout_marginStart="64dp"
            android:textColor="#3DD598"
            android:textSize="45sp"
            android:textStyle="bold"
            android:text="Word"/>

        <TextView
            android:id="@+id/phonetic"
            android:layout_width="147dp"
            android:layout_height="67dp"
            android:layout_below="@id/word"
            android:layout_marginStart="64dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/wordtype"
            android:layout_width="147dp"
            android:layout_height="67dp"
            android:layout_below="@id/word"
            android:layout_toEndOf="@id/phonetic"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/definition"
            android:layout_width="302dp"
            android:layout_height="219dp"
            android:layout_below="@id/phonetic"
            android:layout_centerInParent="true"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/next_word"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_above="@id/learn_this_word"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/next_word_button_custom" />

    <ImageButton
        android:id="@+id/review_words"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_above="@id/learn_this_word"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/review_words_button" />

    <ImageButton
        android:id="@+id/learn_this_word"
        android:layout_width="303.6dp"
        android:layout_height="79.2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8sp"
        android:background="@drawable/learn_this_word_button_custom" />

    <ImageButton
        android:id="@+id/voice"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_above="@id/next_word"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/voice_button_custom" />


</RelativeLayout>