<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".WordsReview">

    <ImageView
        android:id="@+id/meaning_holder"
        android:layout_width="934.2929px"
        android:layout_height="617.4138px"
        android:layout_marginTop="450px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/iv_background_review"/>

    <TextView
        android:id="@+id/meaningView"
        android:layout_width="708.5337px"
        android:layout_height="330px"
        android:textSize="60px"
        android:fontFamily="@font/sfprodisplaysemibold"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:scrollbars="vertical"
        android:layout_marginTop="600px"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="140px"
        android:fontFamily="@font/sfprodisplayheavy"
        android:layout_centerHorizontal="true"
        android:textColor="#f7cc2f"
        android:layout_marginTop="200px"
        android:text="Review"/>


    <ImageButton
        android:id="@+id/next_meaning"
        android:layout_width="485.3495px"
        android:layout_height="144.2151px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/next_word_review_button_custom"
        android:layout_marginTop="1650px"/>

    <ImageButton
        android:id="@+id/shuffle"
        android:layout_width="708px"
        android:layout_height="145px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/try_again_button_custom"
        android:layout_marginTop="1650px"/>

    <ImageButton
        android:id="@+id/backtolearn"
        android:layout_width="708px"
        android:layout_height="145px"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/go_back_to_learn_button_custom" />

    <ImageView
        android:id="@+id/A_answer_box"
        android:layout_width="446px"
        android:layout_height="181px"
        android:background="@drawable/a_default"
        android:layout_marginLeft="75px"
        android:layout_marginTop="1150px"/>

    <ImageView
        android:id="@+id/B_answer_box"
        android:layout_width="446px"
        android:layout_height="181px"
        android:background="@drawable/b_default"
        android:layout_marginLeft="575px"
        android:layout_marginTop="1150px"/>

    <ImageView
        android:id="@+id/C_answer_box"
        android:layout_width="446px"
        android:layout_height="181px"
        android:background="@drawable/c_default"
        android:layout_marginLeft="75px"
        android:layout_marginTop="1385px"/>

    <ImageView
        android:id="@+id/D_answer_box"
        android:layout_width="446px"
        android:layout_height="181px"
        android:background="@drawable/d_default"
        android:layout_marginLeft="575px"
        android:layout_marginTop="1385px"/>

    <TextView
        android:id="@+id/ans_A"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="290dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ans_B"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="290dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ans_C"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="205dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ans_D"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="205dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>