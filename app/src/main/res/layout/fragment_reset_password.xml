<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Fragment.ResetPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/iv_background_signin_out">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="562.1667px"
            android:layout_height="497.351px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="710px"
            android:background="@drawable/iv_forgot_forgotpassword" />

        <ImageButton
            android:id="@+id/image_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70px"
            android:layout_marginTop="230px"
            android:background="@drawable/ic_baseline_arrow_back_ios_24" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/customTextInputLayout01"
            android:layout_width="892.2304px"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:textColorHint="#45377d"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/black"
            app:boxStrokeWidth="2dp"
            app:boxStrokeWidthFocused="2dp"
            app:errorEnabled="true"
            app:hintEnabled="true"
            app:hintTextAppearance="@style/FloatingLabelTextAppearance">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@null"
                android:fontFamily="@font/sfprodisplaymedium"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:textColor="#45377d"
                android:textSize="18sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1810px"
            android:fontFamily="@font/sfprodisplaymedium"
            android:text="Tutorial: We just need your registered email"
            android:textColor="@color/black"
            android:textSize="45px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1880px"
            android:fontFamily="@font/sfprodisplaymedium"
            android:text="to sent your password reset instruction"
            android:textColor="@color/black"
            android:textSize="45px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="738.3352px"
            android:layout_height="121.3256px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1570px"
            android:id="@+id/reset_password_button"
            android:background="@drawable/btn_forgot_forgotpassword_custom" />

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:visibility="gone" />
</FrameLayout>