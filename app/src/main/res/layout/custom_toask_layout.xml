<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_toask"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_round">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/display_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/image_layout" />

        <TextView
            android:id="@+id/display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/display_photo"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/display_photo"
            android:text="Display name"
            android:textColor="@color/color_text_pink"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/display_photo"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/display_photo"
            android:text="Wellcome"
            android:textColor="@color/colorTextWhite"
            android:textSize="12sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>